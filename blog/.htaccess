Options -Indexes -MultiViews
DirectoryIndex public/index.php

RewriteEngine On
RewriteBase /blog/

# 0) Si l’URL contient /public/... → redirige proprement sans /public
RewriteCond %{THE_REQUEST} \s/public/ [NC]
RewriteRule ^public/(.*)$ $1 [R=301,L]

# 1) Bloque l’accès direct à /config et /includes
RewriteRule ^(config|includes)(/.*)?$ - [F,L]

# 2) Réécriture interne vers /public (sans changer l'URL)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ public/$1 [L]
